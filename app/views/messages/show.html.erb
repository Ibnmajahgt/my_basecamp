<p style="color: green"><%= notice %></p>

<p><strong>Author:</strong> <%= @message.user.email %></p>
<p><strong>Message:</strong> <%= @message.content %></p>

<div>
  <%= link_to "Edit this message", edit_project_discussion_message_path(@project, @discussion, @message), class: "btn btn-warning" %> |
  <%= link_to "Back to Discussion", project_discussion_path(@project, @discussion), class: "btn btn-secondary" %>

  <%= button_to "Destroy this message", project_discussion_message_path(@project, @discussion, @message), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
