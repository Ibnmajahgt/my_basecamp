<p class="alert alert-success"><%= notice %></p>

<div class="jumbotron">
  <h1 class="display-4">User Details</h1>
  <%= render @user %>
  
  <hr class="my-4">
  
  <div class="mt-3">
    <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-warning btn-sm" %> |
    <%= link_to "Back to users", users_path, class: "btn btn-secondary btn-sm" %>

    <%= button_to "Destroy this user", @user, method: :delete, class: "btn btn-danger btn-sm mt-2", data: { confirm: "Are you sure?" } %>
  </div>
</div>
