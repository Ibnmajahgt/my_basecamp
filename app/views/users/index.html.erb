<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<div id="users" class="container">
  <table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr id="<%= dom_id user %>">
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to "Show", user_path(user), class: "btn btn-info btn-sm" %>
            <%= link_to "Edit", edit_user_path(user), class: "btn btn-warning btn-sm" %>
            <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New user", new_user_path, class: "btn btn-primary mt-3" %>
